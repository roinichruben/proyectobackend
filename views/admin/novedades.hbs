<div class="container" style="margin-top: 50px ;">
    {{!--fila 1 --}}
    <div class="row">
        <p class="text-end">Hola {{persona}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n
                <i class="fas fa-sign-out-alt"></i></a></p>
    </div>
    {{!-- fin fila 1--}}
    {{!-- fila 2--}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i>
                Nuevo</a>
        </div>
        {{!-- fin fila 2--}}
        {{!-- fila 3--}}
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Titulo</th>
                            <th scope="col">Imagen</th>
                            <th scope="col" class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{titulo}}</td>
                            <td>{{{imagen}}}</td>
                            <td class="text-end">
                                <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i
                                        class="fa fa-pencil"></i></a>
                                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i
                                        class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
        {{!-- fin fila 3--}}

    </div>
</div>